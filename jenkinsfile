currentBuild.displayName = "Tomcat-Deployment-"+currentBuild.number

pipeline {
    tools {
      maven 'mvn_home'
    }
    agent any
    stages {
        stage('SCM-Checkout') {
            steps {
                git branch: 'main', credentialsId: 'git-credentials', 
				url: 'https://github.com/vikas99341/tomcat-jenkins.git'
            }
        }
        stage('Build') {
            steps {
               sh "mvn compile" 
            }
        }
        stage('Test') {
            steps {
                sh "mvn test" 
            }
        }
        stage('Deploy') {
            steps {
                sh "mvn package" 
            }
        }
        stage('Tomcat-deployment') {
            steps {
                sshagent(['ec2-user']) {
					sh """
						scp -o StrictHostKeyChecking=no target/jenkins-maven-19-02.war ec2-user@13.201.184.225:/opt/tomcat/webapps/
						
					"""
				}
            }
        }
    }
}
